{
  "compilerOptions": {
    "strict": true,
    "types": ["node"],   
    "jsx": "react-native",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": false,
    "module": "esnext",
    "target": "es2020",
    "noEmit": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.js"
  ],
  "extends": "expo/tsconfig.base"
}
